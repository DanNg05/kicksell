<div class="container">
  <h1>Your orders:</h1>
  <% current_user.orders.each do |order| %>
    <% shoe = Shoe.find(order.shoe_id) %>
    <li>
      Name: <%= shoe.name %>
      <br>
      Size: <%= shoe.size %>
      <br>
      Order ID: <%= order.id %>
      <br>
      From: <%= order.from %>
      <br>
      To: <%= order.to %>
    </li>
    <%= link_to "Do you want to update the renting period?", edit_order_path(order) %>
  <% end %>
</div>
