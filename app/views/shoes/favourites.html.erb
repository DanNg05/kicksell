<div class="fav-container">
  <div class="container min-vh-100" style="background-color: white">
      <div class="row">
        <div class="col-7">
          <h1 class="fav-heading special-font">Your favourites list</h1>
          <ul>
            <% @favourites.each do |favourite| %>
              <% shoe = Shoe.find(favourite.shoe_id) %>
              <% if favourite.user_id == current_user.id %>
                <div class="fav-list">
                  <% shoe = Shoe.find(favourite.shoe_id) %>
                    <span>
                      <% if shoe.photos.first %>
                        <span><%= cl_image_tag shoe.photos.first.key, height: 300, width: 500, class:"rounded", crop: :fit %></span>
                      <% end %>
                    </span>
                    <span class="fav-shoes">
                      <strong class="fav-shoe-details">Name</strong> <span class="fav-shoe-info"><%= link_to shoe.name, shoe_path(shoe), class:"fav-shoe-name" %></span>
                      <br>
                      <strong class="fav-shoe-details">Size</strong> <span class="fav-shoe-info"><%= shoe.size %> US</span>
                      <br>
                      <strong class="fav-shoe-details">Price</strong> <span class="fav-shoe-info"><%= shoe.price %> AUD/day</span>
                    </span>
                  <% end %>
                  <%= link_to "❌", shoe_favourite_path(shoe, favourite), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"remove-btn" %>
                </div>
            <% end %>
          </ul>
        </div>
      </div>
  </div>
</div>
